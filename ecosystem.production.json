{
    /**
     * Application configuration section
     * http://pm2.keymetrics.io/docs/usage/application-declaration/
     */
    "apps" : [
        {
            "name" : "etobee-admin",
            "script" : "app.js",
            "env_production": {
                "NODE_ENV": "production"
            }
        }
    ],

    /**
     * Deployment section
     * http://pm2.keymetrics.io/docs/usage/deployment/
     */
    "deploy" : {
        "production" : {
            "user" : "ubuntu",
            "host" : "admin2.etobee.com",
            "ref" : "origin/master",
            "repo": "git@gitlab.com:etobee-techgroup/etobee-admin.git",
            "path" : "/home/ubuntu/etobee-admin",
            "post-deploy" : "npm install && bower install -F && PORT=3000 pm2 startOrRestart ecosystem.production.json --env production"
        }
    }
}
